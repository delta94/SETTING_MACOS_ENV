void setup(){
  for(int i=2; i <=9; i++){
    pinMode(i, OUTPUT);
  }
}

void loop(){
  for(int i = 2; i <= 9; i++){
    digitalWrite(i, 1);
    digitalWrite(i + 1, 1);
    digitalWrite(i + 2, 1);
    if(i == 8){
      digitalWrite(2, 1);
    }
    if(i == 9){
      digitalWrite(2, 1);
      digitalWrite(3, 1);
    }
    delay(1000);
    digitalWrite(i, 0);
    delay(0);
  }
}
